# Streamlit Secrets Configuration (Example)
# Copy this file to secrets.toml and fill in actual values
# NEVER commit secrets.toml to version control

# Database connections (if needed in future)
[database]
# Example database configuration
# host = "your-database-host"
# port = 5432
# database = "fao_dashboard"
# username = "your-username"
# password = "your-password"

# API Keys (if needed for enhanced features)
[api]
# Example API keys for external services
# fao_api_key = "your-fao-api-key"
# email_service_key = "your-email-service-key"

# Authentication (if implementing user login)
[auth]
# Example authentication secrets
# jwt_secret = "your-jwt-secret-key"
# session_secret = "your-session-secret"

# External Services (if integrating with cloud services)
[aws]
# Example AWS configuration
# access_key_id = "your-aws-access-key"
# secret_access_key = "your-aws-secret-key"
# region = "us-east-1"

[azure]
# Example Azure configuration
# client_id = "your-azure-client-id"
# client_secret = "your-azure-client-secret"
# tenant_id = "your-azure-tenant-id"

# Email notifications (if implementing alerts)
[email]
# Example email service configuration
# smtp_server = "smtp.gmail.com"
# smtp_port = 587
# username = "your-email@domain.com"
# password = "your-email-password"

# Notes:
# 1. The FAO Dashboard currently works without external secrets
# 2. This file is provided for future extensions
# 3. Always use environment variables in production
# 4. Consider using cloud secret management services